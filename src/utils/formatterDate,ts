import { format, formatDistanceToNow } from 'date-fns'
import { ptBR } from 'date-fns/locale/pt-BR'

export const dataFormatter = new Intl.DateTimeFormat('pt-BR')

const formattedDate = new Date('2024-05-13T18:29:58Z')

export const updatedAtDateFormatted = format(
  formattedDate,
  "d 'de' LLLL 'Ã¡s' HH:mm'h'",
  { locale: ptBR },
)
export const updatedAtDateRelativeToNow = formatDistanceToNow(formattedDate, {
  locale: ptBR,
  addSuffix: true,
})
